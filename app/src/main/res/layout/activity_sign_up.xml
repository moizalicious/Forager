<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_menu_backdrop_no_title"
    tools:context="diaspora.forager.SignUp">


    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:gravity="center_horizontal"
        android:text="Sign Up"
        android:textColor="@color/interfaceText"
        android:textSize="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ratingsGuideline"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textColor="@color/interfaceText"
        android:textSize="20dp"
        tools:layout_conversion_absoluteHeight="24dp"
        tools:layout_conversion_absoluteWidth="50dp"
        tools:layout_conversion_absoluteX="0dp"
        tools:layout_conversion_absoluteY="95dp"
        app:layout_constraintTop_toTopOf="@+id/guideline4"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="66dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/textView6"
        android:layout_marginStart="66dp" />

    <EditText
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="66dp"
        android:background="@color/common_google_signin_btn_text_dark_focused"
        android:hint="Enter Your Email Address"
        android:textColor="@color/interfaceText"
        android:textColorHint="@color/interfaceText"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_conversion_absoluteHeight="42dp"
        tools:layout_conversion_absoluteWidth="320dp"
        tools:layout_conversion_absoluteX="0dp"
        tools:layout_conversion_absoluteY="119dp"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        android:layout_marginStart="66dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textColor="@color/interfaceText"
        android:textSize="20dp"
        tools:layout_conversion_absoluteHeight="24dp"
        tools:layout_conversion_absoluteWidth="88dp"
        tools:layout_conversion_absoluteX="0dp"
        tools:layout_conversion_absoluteY="171dp"
        app:layout_constraintTop_toBottomOf="@+id/email"
        android:layout_marginLeft="66dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/textView4"
        android:layout_marginStart="66dp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="66dp"
        android:layout_marginTop="2dp"
        android:backgroundTint="@android:color/white"
        android:hint="Enter Password"
        android:inputType="textPassword"
        android:textColor="@color/interfaceText"
        android:textColorHint="@color/interfaceText"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        tools:layout_conversion_absoluteHeight="42dp"
        tools:layout_conversion_absoluteWidth="320dp"
        tools:layout_conversion_absoluteX="0dp"
        tools:layout_conversion_absoluteY="195dp"
        android:layout_marginStart="66dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="155dp"
        android:layout_height="24dp"
        android:layout_marginLeft="66dp"
        android:layout_marginTop="8dp"
        android:text="Retype Password"
        android:textColor="@color/interfaceText"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password"
        tools:layout_conversion_absoluteHeight="24dp"
        tools:layout_conversion_absoluteWidth="155dp"
        tools:layout_conversion_absoluteX="0dp"
        tools:layout_conversion_absoluteY="247dp"
        android:layout_marginStart="66dp" />

    <EditText
        android:id="@+id/retypePassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="66dp"
        android:backgroundTint="@android:color/white"
        android:hint="Re-enter Your Password"
        android:inputType="textPassword"
        android:textColor="@color/interfaceText"
        android:textColorHint="@color/interfaceText"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        tools:layout_conversion_absoluteHeight="42dp"
        tools:layout_conversion_absoluteWidth="320dp"
        tools:layout_conversion_absoluteX="0dp"
        tools:layout_conversion_absoluteY="271dp"
        android:layout_marginStart="66dp" />

    <android.support.constraint.Guideline
        android:id="@+id/ratingsGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.09823183"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="56dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.29805997"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="169dp" />

    <LinearLayout
        android:layout_width="233dp"
        android:layout_height="55dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/retypePassword"
        app:layout_constraintVertical_bias="0.391">

        <Button
            android:id="@+id/clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/colorAccent"
            android:text="Clear"
            android:textColor="@color/colorSplash"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.242"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/signUp"
            tools:layout_conversion_absoluteHeight="48dp"
            tools:layout_conversion_absoluteWidth="88dp"
            tools:layout_conversion_absoluteX="0dp"
            tools:layout_conversion_absoluteY="361dp" />

        <Button
            android:id="@+id/signUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.87"
            android:backgroundTint="@color/interfaceButton"
            android:text="Sign Up"
            android:textColor="@color/colorSplash"
            app:layout_constraintBottom_toTopOf="@+id/clear"
            app:layout_constraintHorizontal_bias="0.698"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/retypePassword"
            app:layout_constraintVertical_bias="0.0"
            tools:layout_conversion_absoluteHeight="48dp"
            tools:layout_conversion_absoluteWidth="88dp"
            tools:layout_conversion_absoluteX="0dp"
            tools:layout_conversion_absoluteY="313dp" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
