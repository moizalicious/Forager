<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_menu_backdrop_no_title"
    tools:context="diaspora.forager.LoginSignUp">

    <LinearLayout
        android:id="@+id/animsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_marginTop="128dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/loginLabel"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Resume your Journey."
            android:textAlignment="center"
            android:textColor="@color/interfaceText"
            android:visibility="visible" />

        <TextView
            android:id="@+id/loginSuccess"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Welcome back, kinsman."
            android:textAlignment="center"
            android:textColor="@color/interfaceText"
            android:visibility="gone" />

        <Button
            android:id="@+id/login"
            android:layout_width="246dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/interfaceButton"
            android:elevation="40dp"
            android:text="Login" />

        <TextView
            android:id="@+id/signUpLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New to the Tribe?"
            android:textAlignment="center"
            android:textColor="@color/interfaceText" />

        <Button
            android:id="@+id/signup"
            android:layout_width="246dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/interfaceButton"
            android:elevation="40dp"
            android:text="Begin Your Journey" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:text="Forager"
        android:textColor="@color/interfaceText"
        android:textSize="35dp" />

</android.widget.RelativeLayout>
